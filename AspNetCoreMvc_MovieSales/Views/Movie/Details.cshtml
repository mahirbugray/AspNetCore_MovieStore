
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutMovie.cshtml";
}

@model Movie

<h2>Film Bilgileri</h2>

<div class="card mb-3">
    <form asp-controller="Sepet" asp-action="Ekle" method="get">
    <div class="row g-0">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name" title="@Model.Name">
        </div>
        <div class="col-md-7">
                <input type="hidden" name="Id" value="@Model.Id">
            <div class="card-body">
                <h3 class="card-title">@Model.Name</h3>
                <p class="card-text">@Model.Summary</p>
                <p>This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <span class="card-text">Fiyat : @string.Format("{0:C2}", @Model.Price)</span>
                <input class="ms-3" name="Adet" type="number" value="1" min="1" max="@Model.Stock">
            </div>
        </div>
    </div>
    <div class="card-footer text-center">
        <button type="submit" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill" viewBox="0 0 16 16">
                <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z" />
            </svg>
            Sepete At
        </button>
    </div>
    </form>
</div>

